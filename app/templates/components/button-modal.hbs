{{#popup-modal}}
  <div class="content">
    <div class="header">
      <h2 class="ui left floated header">
          {{title}}
      </h2>
      <h3 class="ui right floated header">
        <i class="close fitted link icon"
           {{action (route-action "closeModal")}}>
        </i>
      </h3>
    </div>
  </div>

  <div class="content">
    {{yield}}
  </div>

  <div class="extra content">
    <div class="right floated">
      <div class="ui deny button" {{action (route-action "closeModal")}}>
        Cancel
      </div>
      <div class="ui positive right button {{if disabled 'disabled'}}"
           {{action "yes"}}>
        Add
      </div>
    </div>
  </div>
{{/popup-modal}}
