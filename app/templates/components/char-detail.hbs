{{#paper-card}}
  {{#paper-card-content}}
    {{#if isEditing}}
      {{paper-input label="Name" size=20 value=char.name}}
    {{else}}
      <div>
        <strong class="char-name">{{char.name}}</strong>
        <span class="char-icons">
          {{#paper-button raised=true primary=true center=false
                          action="editChar" icon-button=true}}
            {{paper-icon "edit" size="sm"}}
          {{/paper-button}}
          {{#paper-button raised=true warn=true
                          action="deleteChar" icon-button=true}}
            {{paper-icon "delete" size="sm"}}
          {{/paper-button}}
        </span>
      </div>
    {{/if}}
    <p>
      {{create-line-note create=attrs.create}}
      {{date-sorted-notes-list char=char notes=char.notes
                               delete=attrs.deleteNote
                               edit=attrs.editNote
                               class="table table-striped"}}
    </p>
  {{/paper-card-content}}
  <div class="md-actions" layout="row" layout-align="end center">

  </div>
{{/paper-card}}
