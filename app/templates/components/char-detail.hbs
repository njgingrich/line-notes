{{#paper-card}}
  {{#paper-card-title}}
    {{#paper-card-title-text}}
      {{#if isEditing}}
        {{paper-input label="Name" size=20 value=char.2name event-enter=(action editChar)}}
      {{else}}
        <strong class="md-display-1">{{char.name}}</strong>
      {{/if}}
    {{/paper-card-title-text}}
    {{#paper-button icon-button=true raised=true action="openAddNoteModal"}}
      {{paper-icon icon="add"}}
    {{/paper-button}}
  {{/paper-card-title}}
  {{#paper-card-content}}
    {{date-sorted-notes-list char=char notes=char.notes
        delete=attrs.deleteNote
        edit=attrs.editNote
        class="table table-striped"}}

  {{/paper-card-content}}
{{/paper-card}}



{{#if openModal}}
  {{#bs-modal title="Add Line Note" body=false footer=false closeAction="resetModal"}}
    {{#bs-modal-body}}
      {{#bs-form action=(action create) model=this}}
        {{create-line-note create=attrs.create}}
      {{/bs-form}}
    {{/bs-modal-body}}
    {{bs-modal-footer closeTitle="Cancel" submitTitle="Add"}}
  {{/bs-modal}}
{{/if}}
