{{#paper-card}}
  {{#paper-card-title}}
    {{#paper-card-title-text}}
      {{#if isEditing}}
        {{paper-input label="Name" size=20 value=char.name event-enter=(action editChar)}}
      {{else}}
        <strong class="md-display-1">{{char.name}}</strong>
      {{/if}}
    {{/paper-card-title-text}}
    {{#paper-button icon-button=true raised=true action="toggleAddNoteModal"}}
      {{paper-icon icon="add"}}
    {{/paper-button}}
  {{/paper-card-title}}
  {{#paper-card-content}}
    {{date-sorted-notes-list char=char notes=char.notes
        delete=attrs.deleteNote
        edit=attrs.editNote
        class="table table-striped"}}

  {{/paper-card-content}}
{{/paper-card}}

{{create-line-note open=openModal
                   create=attrs.create
                   close=(action "toggleAddNoteModal")}}
