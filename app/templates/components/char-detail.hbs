{{#paper-card}}
  {{#paper-card-title}}
    {{#paper-card-title-text}}
      {{#if isEditing}}
        {{paper-input label="Name" attr-size=30
                      value=char.name
                      onChange=(action (mut char.name))}}
        {{#paper-button mini=true icon-button=true onClick=(action editChar)}}
          {{paper-icon "edit"}}
        {{/paper-button}}
      {{else}}
        <strong class="md-display-1">{{char.name}}</strong>
      {{/if}}
    {{/paper-card-title-text}}
    {{#paper-button icon-button=true raised=true fab=true
                    onClick=(action "toggleAddNoteModal")}}
      {{paper-icon icon="add"}}
    {{/paper-button}}
  {{/paper-card-title}}
  {{#paper-card-content}}
    {{notes-list char=char notes=char.notes
        delete=attrs.deleteNote
        edit=attrs.editNote
        class="table table-striped"}}

  {{/paper-card-content}}
{{/paper-card}}
{{create-line-note open=openModal
                   create=attrs.create
                   close=(action "toggleAddNoteModal")}}
