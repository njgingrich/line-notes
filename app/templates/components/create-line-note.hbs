{{#bs-form class="form-inline"}}
  {{bs-input size=3 value=page placeholder="Page"}}
  {{bs-input size=50 value=line placeholder="Line"}}
  {{bs-input size=30 value=note placeholder="Note"}}
  {{#bs-button-group type="radio" value=error}}
  <!--
    {{#bs-button active=(eq 0 error) value=0}}0{{/bs-button}}
    {{#bs-button active=(eq 1 error) value=1}}1{{/bs-button}}
    {{#bs-button active=(eq 2 error) value=2}}2{{/bs-button}}
    {{#bs-button active=(eq 3 error) value=3}}3{{/bs-button}}
    {{#bs-button active=(eq 4 error) value=4}}4{{/bs-button}}
    {{#bs-button active=(eq 5 error) value=5}}5{{/bs-button}}
  -->
    {{#each errorTypes.errors as |err index|}}
      {{#bs-button active=(eq index error) value=index}}
        {{err}}
      {{/bs-button}}
    {{/each}}
  {{/bs-button-group}}
  {{#bs-button action="addNote" type="success"
               disabled=(v-get this 'isInvalid')}}Create{{/bs-button}}
{{/bs-form}}
