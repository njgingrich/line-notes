{{#if open}}
  {{#bs-modal title="Add Line Note" body=false footer=false closeAction=attrs.close}}
    {{#bs-modal-body}}
      {{#bs-form action=(action "addNote")}}
        {{paper-input attr-size=3 value=page label="Page"}}
        {{paper-input attr-size=50 value=line label="Line"}}
        {{paper-input attr-size=30 value=note label="Note"}}
        {{#bs-button-group type="radio" value=error}}
          {{#each errorTypes.errors as |err index|}}
            {{#bs-button active=(eq index error) value=index}}
              {{err}}
            {{/bs-button}}
          {{/each}}
        {{/bs-button-group}}
      {{/bs-form}}
    {{/bs-modal-body}}
    {{bs-modal-footer closeTitle="Cancel" submitTitle="Add"}}
  {{/bs-modal}}
{{/if}}
