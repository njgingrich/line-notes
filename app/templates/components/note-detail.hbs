<td class="col-sm-1">
  {{#if isEditing}}
    <div layout>
      {{paper-input flex=true value=note.page hideAllMessages=true
                    class="note-detail-editing"
                    onChange=(action (mut page))}}
    </div>
  {{else}}
    {{note.page}}
    {{#tooltip-on-element}}
      {{moment-calendar note.date}}
    {{/tooltip-on-element}}
  {{/if}}
</td>
<td class="col-sm-7">
  {{#if isEditing}}
    <div layout>
      {{paper-input flex=true value=note.line hideAllMessages=true
                    class="note-detail-editing"
                    onChange=(action (mut line))}}
    </div>
  {{else}}
    {{{richTextLine}}}
  {{/if}}
</td>
<td class="col-sm-2">
  {{#if isEditing}}
    {{#paper-select value=note.error class="note-detail-editing"
                    onChange=(action (mut note.error))}}
      {{#each errorTypes.errors as |err index|}}
        {{#paper-option value=index}}
          {{capitalize err}}
        {{/paper-option}}
      {{/each}}
    {{/paper-select}}
  {{else}}
    {{error-str note.error}}
  {{/if}}

</td>
<td class="col-sm-1">
  {{paper-switch value=isEditing onChange=(action "editNote")}}
</td>
<td class="col-sm-1">
  {{#paper-button warn=true raised=true mini=true
                  onClick=(action delete note) icon-button=true}}
    {{paper-icon "delete"}}
  {{/paper-button}}
</td>
