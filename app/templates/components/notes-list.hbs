<thead>
  <tr>
    <th class="two wide">Page</th>
    <th class="nine wide">Line</th>
    <th class="four wide">Error</th>
    <th class="one wide">Edit</th>
  </tr>
</thead>
{{#if noNotes}}
  <tbody>
    No notes found.
  </tbody>
{{else}}
  <tbody>
    {{#each sortedNotes as |note|}}
      {{note-detail note=note}}
    {{/each}}
  </tbody>
{{/if}}

{{#if isShowing}}
  {{create-line-note close=(action toggle)
                     create=(action addNote)}}
{{/if}}
