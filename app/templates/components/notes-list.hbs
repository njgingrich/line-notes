<thead>
  <tr>
    <th class="two wide">Page</th>
    <th class="nine wide">Line</th>
    <th class="three wide">Error</th>
    <th class="one wide">Edit</th>
    <th class="one wide">Delete</th>
  </tr>
</thead>
{{#if noNotes}}
  <tbody>
    <tr>
      <td colspan="4">No notes found.</td>
    </tr>
  </tbody>
{{else}}
  <tbody>
    {{#each sortedNotes as |note|}}
      {{note-detail note=note
                    edit=(action edit)
                    delete=(action delete)}}
    {{/each}}
  </tbody>
{{/if}}
