<thead>
  <tr>
    <th>Page</th>
    <th>Line</th>
    <th>Error</th>
    <th>Edit</th>
  </tr>
</thead>
{{#if noNotes}}
  <tbody>
    No notes found.
  </tbody>
{{else}}
  <tbody>
    {{#each sortedNotes as |note|}}
      {{note-detail note=note}}
    {{/each}}
  </tbody>
{{/if}}

{{#if isShowing}}
  {{create-line-note close=(action toggle)
                     create=(action addNote)}}
{{/if}}
