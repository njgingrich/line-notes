{{#if showing}}
  {{#paper-dialog clickOutsideToClose=true}}
    {{#paper-toolbar}}
      {{#paper-toolbar-tools}}
        <h2>{{title}}</h2>
        <span class="flex"></span>
        {{#paper-button iconButton=true onClick=(action "cancelAction")}}
          {{paper-icon icon="close"}}
        {{/paper-button}}
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}

    {{#paper-dialog-content}}
      <div style="max-width:800px;max-height:810px;">
        {{yield}}
      </div>
    {{/paper-dialog-content}}

    {{#paper-dialog-actions class="layout-row"}}
      <span class="flex"></span>
      {{#paper-button onClick=(action "cancelAction")}}
        {{cancelText}}
      {{/paper-button}}
      {{#paper-button onClick=(action "confirmAction")}}
        {{confirmText}}
      {{/paper-button}}
    {{/paper-dialog-actions}}
  {{/paper-dialog}}
{{/if}}
