{{#paper-content class="md-whiteframe-z1" layout-padding='5'}}
  {{#paper-grid-list md-cols-sm="1" md-cols-md="2" md-cols-gt-md="6"
                     md-row-height-gt-md="3:2" md-row-height="2:2"
                     md-gutter="12px" md-gutter-gt-sm="8px"}}

  {{#each model as |show|}}
    {{#paper-grid-tile class="gray" md-rowspan="3" md-colspan="2" md-colspan-sm="1"}}
      <ul>
        {{#each show.characters as |char|}}
          <li>
            {{char.name}}
          </li>
        {{/each}}
      </ul>
      {{#link-to 'shows.show-detail' show.id}}
        {{#paper-grid-tile-footer class="show-list-footer"}}
          <h3>{{show.name}}</h3>
        {{/paper-grid-tile-footer}}
      {{/link-to}}
    {{/paper-grid-tile}}
  {{/each}}

  {{/paper-grid-list}}
{{/paper-content}}
